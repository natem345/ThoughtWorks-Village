<h1>Mentors </h1>
Query was: <%= @query %><br /><br />
Maj was: <%= @maj %>
<div id="FilterDiv" style="">
  <strong>Filter</strong>
  <%= form_tag "/mentors", :method => "get" do %> 
    Experiences: <br />
    <% @experiences.each do |e| %>	  
      <%= check_box_tag("Experiences:",e.ability) %>
	  <%= e.ability %>
      <br />  
    <% end %> 
    <% @filterables.each do |f| %>
	  <p></p>
      <%=f.first%>
	  <br />
      <% f.each do |str| %>	  
	   <% if str == f.first then %>
	     <% next %>
	   <% end %>
	    <%= check_box_tag(f.first,str) %>
		<%= str %>
        <br />
      <% end %> 
    <% end %>
    <%= submit_tag("Filter") %>
  <% end %> 
</div>

<table>
  <tr>
    <th>First Name</th>
    <th>Location</th>
    <th>Current Position</th>
    <th>School</th>
    <th>Major</th>
    <th>Total Years of Experience</th>
    <th>Interests</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mentors.each do |mentor| %>
  <tr>
    <td><%= mentor.name.split[0] %></td>
    <td><%= mentor.location %></td>
    <td><%= mentor.current_position %></td>
    <td><%= mentor.school %></td>
    <td><%= mentor.major %></td>
    <td><%= mentor.total_years_experience %></td>
    <td><%= mentor.interests %></td>
    <td><%= link_to 'Show', mentor %></td>
    <!-- <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td> -->
    <!-- <td><%= link_to 'Destroy', mentor, :confirm => 'Are you sure?', :method => :delete %></td> -->
  </tr>
  <% end %>
</table>
