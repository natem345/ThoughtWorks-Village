<h1>Search Results</h1>
<style type="text/css">
#FilterDiv {
float: left; 
width: 200px;
}
#FilterDiv label {
display:block;
}
th a {
color: white;
}
</style>
<table>
<tr>You searched for: <%= @query %></tr>

<tr>
  <th>First Name </th>
  <th>Location</th>
  <th>Current Position</th>
  <th>School</th>
  <th>Major</th>
  <th>Total Years of Experience</th>
  <th>Interests</th>
  <th></th>
  <th></th>
  <th></th>
</tr>

<% @mentors.each do |mentor| %>
  <tr>
    <td><%= mentor.name.split[0] %></td>
    <td><%= mentor.location %></td>
    <td><%= mentor.current_position %></td>
    <td><%= mentor.school %></td>
    <td><%= mentor.major %></td>
    <td><%= mentor.total_years_experience %></td>
    <td><%= mentor.interests %></td>
    <td><%= link_to 'Show', mentor %></td>
  </tr>
<% end %>
</table>

